@using Todo.Models
@using Todo.Shared.Enums
<div class="w-full h-24 rounded flex flex-wrap content-center shadow justify-items-stretch  @GetPriorityColor()">
    <input class="m-4 h-8 w-4 text-indigo-600 border-gray-300 rounded" type="checkbox" name="status" @bind="@TodoItem.Status" />
    
    @if (Editing)
    {
        <input @bind="@NewName" class="m-4 w-4/5 h-8 text-lg rounded border-gray-300 @GetPriorityColor() shadow font-medium">

        <select @bind="@NewPriority" class="rounded @GetPriorityColor() mx-4 shadow">
            @foreach (var priority in Enum.GetValues(typeof(TodoItemPriority)))
            {
                <option value="@priority.ToString()">@priority</option>
            }
        </select>
        <button class="shadow rounded h-auto justify-self-end px-4" @onclick="Save">Save</button>

    }
    else
    {
        <label class="m-4 w-4/5 h-8 text-lg font-medium">@TodoItem.Name</label>
        <button class="shadow rounded mr-4 h-auto px-4" @onclick="Edit">Edit</button>
        <button class="shadow rounded h-auto px-4" @onclick="Delete">Delete</button>

    }
</div>