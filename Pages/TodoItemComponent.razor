<li class="container w-full h-24 bg-green-100 rounded flex flex-wrap content-center shadow justify-items-stretch">
    <input class="m-4 h-8 w-4 text-indigo-600 border-gray-300 rounded" type="checkbox" name="status" @bind="@TodoItem.Status" />
    
    @if (Editing)
    {
        <input @bind="@NewName" class="m-4 w-4/5 h-8 text-lg rounded border-gray-300">
        <button class="shadow rounded h-auto justify-self-end px-4" @onclick="Save">Save</button>

    }
    else
    {
        <label class="m-4 w-4/5 h-8 text-lg">@TodoItem.Name</label>
        <button class="shadow rounded mr-4 h-auto px-4" @onclick="Edit">Edit</button>
        <button class="shadow rounded h-auto px-4" @onclick="Delete">Delete</button>

    }
</li>